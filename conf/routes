# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#HTML User
GET     /user/register-new-account                              controllers.user.SignUpController.signUp
POST    /user/register-new-account                              controllers.user.SignUpController.create
GET     /user/login                                             controllers.user.SignInController.signIn
POST    /user/login                                             controllers.user.SignInController.auth
GET     /user/remind-password                                   controllers.user.FormindController.forgot
POST    /user/remind-password                                   controllers.user.FormindController.remind
GET     /user/logout                                            controllers.user.SignInController.logout
GET     /user                                                   controllers.user.UserController.getUser
POST    /user/update-email                                      controllers.user.UserController.updateEmail
POST    /user/update-password                                   controllers.user.UserController.updatePassword

#HTML Profile
GET     /user/profile                                           controllers.user.UserProfileController.getProfile
POST    /user/profile/create-profile                            controllers.user.UserProfileController.createProfile
POST    /user/profile/update-profile                            controllers.user.UserProfileController.updateProfile
POST    /user/profile/create-profile-photo                      controllers.user.UserProfileController.createPhoto
POST    /user/profile/update-profile-photo                      controllers.user.UserProfileController.updatePhoto

#HTML user admin
GET     /user-admin                                             controllers.userAdmin.UserAdminController.getUsers
GET     /user-admin/add-new-user                                controllers.userAdmin.CreateUserController.addUser
POST    /user-admin/create-new-user                             controllers.userAdmin.CreateUserController.createUser
GET     /user-admin/edit-user/:email                            controllers.userAdmin.UpdateUserController.editUser(email: String)
POST    /user-admin/edit-user/:email                            controllers.userAdmin.UpdateUserController.updateUser(email: String)
GET     /user-admin/delete-user/:email                          controllers.userAdmin.UserAdminController.deleteUser(email: String)

#HTML contact
POST    /contact/create-contact-message                         controllers.contact.ContactController.addMessage
GET     /contacts/get-all                                       controllers.contact.ContactController.getMessages
GET     /contacts/get-contact/:id                               controllers.contact.ResponseContactController.getContact(id: Long)
POST    /contacts/response/:id                                  controllers.contact.ResponseContactController.generateResponse(id: Long)

#HTML Newsletter
POST   /newsletter/add-email                                    controllers.newsletter.NewsletterController.createEmail
GET    /newsletter/get-all-emails                               controllers.newsletter.NewsletterController.getAll

#HTML Business Card

GET     /business-card/get-all                                  controllers.businessCard.BusinessCardController.getAll
GET     /business-card/add-new-business-card                    controllers.businessCard.BusinessCardController.addCard
POST    /business-card/add-new-business-card                    controllers.businessCard.BusinessCardController.createCard
GET     /business-card/update-business-card/:id                 controllers.businessCard.BusinessCardController.editCard(id: Long)
POST    /business-card/update-business-card/:id                 controllers.businessCard.BusinessCardController.updateCard(id: Long)
GET     /business-card/get-card/:id                             controllers.businessCard.BusinessCardController.getCard(id: Long)
GET     /business-card/delete-card/:id                          controllers.businessCard.BusinessCardController.deleteCard(id: Long)

#HTML Company
GET     /company                                                controllers.company.CompanyController.getCompany()
POST    /company/create-new-company                             controllers.company.CompanyController.createCompany()
POST    /company/update-company                                 controllers.company.CompanyController.updateCompany()

#HTML Page
GET     /pages/get-all                                          controllers.pages.PageController.getAll
GET     /pages/page/:page/:size                                 controllers.pages.PageController.getPage(page: Integer, size: Integer)
GET     /pages/add-new-page                                     controllers.pages.CreatePageController.addPage
POST    /pages/add-new-page                                     controllers.pages.CreatePageController.createPage
GET     /pages/edit-page/:name                                  controllers.pages.UpdatePageController.editPage(name: String)
POST    /pages/edit-page/:name                                  controllers.pages.UpdatePageController.updatePage(name: String)
GET     /pages/delete-page/:name                                controllers.pages.UpdatePageController.deletePage(name: String)
POST    /pages/add-page-content/:name                           controllers.pages.PageContentController.createContent(name: String)
POST    /pages/update-page-content/:name                        controllers.pages.PageContentController.updateContent(name: String)
POST    /pages/add-page-meta-tags/:name                         controllers.pages.PageMetaTagsController.createMetaTags(name: String)
POST    /pages/update-page-meta-tags/:name                      controllers.pages.PageMetaTagsController.updateMetaTags(name: String)
POST    /pages/add-page-open-graph-tags/:name                   controllers.pages.PageOpenGraphTagController.createOpenGraphTags(name: String)
POST    /pages/update-page-open-graph-tags/:name                controllers.pages.PageOpenGraphTagController.updateOpenGraphTags(name: String)
POST    /pages/add-page-open-graph-image/:name                  controllers.pages.PageOpenGraphTagController.createOpenGraphTags(name: String)
POST    /pages/update-page-open-graph-image/:name               controllers.pages.PageOpenGraphTagController.updateOpenGraphTags(name: String)
#HTML Dashboard
GET     /dashboard                                              controllers.dashboard.DashboardController.dashboard
